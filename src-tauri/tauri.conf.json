{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PhotoSearch",
  "version": "0.1.0",
  "identifier": "com.photosearch.experiment",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ui && npm run dev",
    "beforeBuildCommand": "cd ui && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PhotoSearch",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}